{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "paths": {
      "@config/*": ["lib/config/*"],
      "@api/*": ["lib/api/*"]
    }
  },
  "include": [
      "./lib/*.ts",
      "./lib/**/*.ts"
  ],
  "exclude": [
      "node_modules"
    ],
}