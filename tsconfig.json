{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./lib/*.ts",
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}